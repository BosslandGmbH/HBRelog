<UserControl x:Class="HighVoltz.HBRelog.Controls.AccountConfigUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:HighVoltz.HBRelog.Controls"
             xmlns:HighVoltz="clr-namespace:HighVoltz.HBRelog"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >
        <!-- Account Settings Tab -->
        <!-- Bind to the currently selected profile in grid -->
        <TabControl HorizontalAlignment="Stretch" Name="AccountTabControl" VerticalAlignment="Stretch" Padding="4" 
                    HorizontalContentAlignment="Center" DataContext="{Binding Path=/Settings}" >
            <TabItem Header="Acount" Name="AcountTab" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Border Padding="2" BorderThickness="1" BorderBrush="Gray" CornerRadius="3" Name="GameConfigBorder">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--Identifier-->
                            <TextBlock Text="Profile Name" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="ProfileNameText" Grid.Column="1" Text="{Binding Path=ProfileName}"/>
                            <!--Bnet Account-->
                            <TextBlock Text="BattleNet" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" Grid.Row="1" />
                            <TextBox x:Name="WoWBNetAccountText" Grid.Column="1" Grid.Row="1" Text="{Binding Path=WowSettings.Login}"/>
                            <!--Account Name-->
                            <TextBlock Text="Account Name" Grid.Row="2" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="AccountNameText" Grid.Column="1" Grid.Row="2" 
                                                      Text="{Binding Path=WowSettings.AcountName}"/>
                            <!--Password Name-->
                            <TextBlock Text="Password" Grid.Row="3" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <PasswordBox Name="PasswordText" Grid.Column="1" Grid.Row="3" PasswordChanged="PasswordTextPasswordChanged" />
                            <!--Character Name-->
                            <TextBlock Text="Character" Grid.Row="4" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="CharacterText" Grid.Column="1" Grid.Row="4"  Text="{Binding Path=WowSettings.CharacterName}"/>
                            <!--Server Name-->
                            <TextBlock Text="Server" Grid.Row="5" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="ServerText" Grid.Column="1" Grid.Row="5" Text="{Binding Path=WowSettings.ServerName}"/>
                            <!--WoW Path-->
                            <TextBlock Text="WoW Path" Grid.Row="6" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <Controls:FileInputBox x:Name="WoWFileInput" Grid.Row="6" Grid.Column="1" 
                                                       FileNameChanged="WoWFileInputFileNameChanged"
                                                       Title="Browse to and select your WoW.exe file"
                                                       DefaultExt=".exe" Filter=".exe|*.exe"/>

                        </Grid>
                    </ScrollViewer>
                </Border>
            </TabItem>
            <!-- Bot Settings Tab -->
            <TabItem Header="Bot" x:Name="BotTab" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Border Padding="2" BorderThickness="1" BorderBrush="Gray" CornerRadius="3" Name="BotConfigBorder">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--CustomClass-->
                            <TextBlock Text="Custom Class" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="CustomClassText" Grid.Column="1" Text="{Binding Path=HonorbuddySettings.CustomClass}"/>
                            <!-- BotBase -->
                            <TextBlock Text="Bot" Grid.Row="1" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="BotBaseText" Grid.Row="1" Grid.Column="1" Text="{Binding Path=HonorbuddySettings.BotBase}"/>
                            <!--HB Profile-->
                            <TextBlock Text="Profile Path" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" Grid.Row="2" />
                            <Controls:FileInputBox x:Name="HBProfileInput" Grid.Row="2" Grid.Column="1" 
                                                       FileNameChanged="HBProfileFileInputFileNameChanged"
                                                       Title="Browse to and select your Honorbuddyy profile"
                                                       DefaultExt=".xml" Filter=".xml|*.xml"/>
                            <!--HB Path-->
                            <TextBlock Text="Honorbuddy Path" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" Grid.Row="3" />
                            <Controls:FileInputBox x:Name="HBPathInput" Grid.Row="3" Grid.Column="1" 
                                                       FileNameChanged="HBPathInputFileNameChanged"
                                                       Title="Browse to and select your WoW.exe file"
                                                       DefaultExt=".exe" Filter=".exe|*.exe"/>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </TabItem>
            <!-- Window Settings Tab -->
            <TabItem Header="Window" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Border Padding="2" BorderThickness="1" BorderBrush="Gray" CornerRadius="3">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--WoW Window X-->
                            <TextBlock Text="WoW Window X" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="WowWindowXText" Grid.Column="1" Text="{Binding Path=WowSettings.WowWindowX}"/>
                            <!--WoW Window Y-->
                            <TextBlock Text="WoW Window Y" Grid.Row="1" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="WowWindowYText" Grid.Column="1" Grid.Row="1" Text="{Binding Path=WowSettings.WowWindowY}"/>
                            <!--WoW Window Width -->
                            <TextBlock Text="WoW Window Width" Grid.Row="2" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="WowWindowWidthText" Grid.Column="1" Grid.Row="2" Text="{Binding Path=WowSettings.WowWindowWidth}"/>
                            <!--WoW Window Height-->
                            <TextBlock Text="WoW Window Height" Grid.Row="3" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <TextBox x:Name="WowWindowHeightText" Grid.Column="1" Grid.Row="3" Text="{Binding Path=WowSettings.WowWindowHeight}"/>
                            <!--Grab window size and location-->
                            <TextBlock Text="Grab window size/location" Grid.Row="4" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            <Button x:Name="WowWindowGrabText" Content="Grab"  Grid.Column="1" Grid.Row="4" Click="WowWindowGrabTextClick"/>
                            <!--Grab window size and location-->
                            <StackPanel Grid.Row="5" Orientation="Horizontal">
                                <TextBlock Text="Resize to 1/" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                                <TextBox x:Name="WowWindowRatioText" Text="3"/>
                                <TextBlock Text="ratio of screen" HorizontalAlignment="Left" Height="20" Margin="5,0,5,0" />
                            </StackPanel>
                            <Button x:Name="WowWindowRatioButton" Grid.Row="5" Grid.Column="1" Content="Resize"  Click="WowWindowRatioButtonClick"/>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </TabItem>
            <!-- Task Settings Tab -->
            <TabItem Header="Tasks" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <DockPanel>
                    <TextBlock Text="Drag and drop tasks to the right Pane" DockPanel.Dock="Top"/>
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border BorderBrush="SlateGray" BorderThickness="1" >
                            <ListBox x:Name="TaskList" MouseMove="TaskList_MouseMove" />
                        </Border>
                        <Border BorderBrush="SlateGray" BorderThickness="1" Grid.Column="1" >
                            <ListBox x:Name="ProfileTaskList" AllowDrop="True" 
                                     Drop="ProfileTaskList_Drop" MouseMove="ProfileTaskList_MouseMove" 
                                     ItemsSource="{Binding CharacterProfiles/Tasks, 
                                     Source={x:Static HighVoltz:HBRelogManager.Settings}}" KeyDown="ProfileTaskList_KeyDown"
                                     SelectionChanged="ProfileTaskListSelectionChanged" />
                        </Border>
                        <Border BorderBrush="SlateGray" BorderThickness="2" Grid.ColumnSpan="2" Grid.Row="1">
                            <Controls:TaskEditor  x:Name="TaskPropEditor" />
                        </Border>
                    </Grid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
